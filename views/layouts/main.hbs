<body>
    <style>
        .link {
            height: 100px;
            width: 200px;
            text-align: center;
            background-color: aquamarine;
            border: 2px solid rgb(65, 128, 107);
            margin: 5px;
            border-radius: 15px;

        }
        .nowyplik_katalog{
            padding: 7px;
            background-color:darkorange;
            margin:5px;
            text-align: center;
            border-radius: 15px;;
        }
        .nowyplik_katalog:hover{
            background-color: orange;
        }
        td {
            border: 1px solid black;
            padding: 10px
        }

        .clear {
            clear: both;
        }

        .float {
            float: left;
        }

        header {
            background-color: gray;
            border-radius: 15px;
            height: 115px;
        }

        .left {
            width: 25%;
        }

        .main {
            width: 75%;
        }

        article {
            background-color: #5763a8;
            border-radius: 15px;
            padding: 15px;
            margin-top: 10px
        }

        aside {
            background-color: lightgray;
            border-radius: 15px;
            padding: 15px;
            margin-top: 10px
        }
        .tile{
            height:150px;
            border:4px solid black;
            border-radius: 20px;
            background-color: aquamarine;
            margin:10px;
            float:left;
        }
        .intile{
            margin-top:20px;
            background-color: beige;
            border-radius: 5px;
            border: solid black 2px;
            margin-left:25px;
            padding:5px;
        }
        .intile:last-child{
            margin-right:25px;
        }
        .tile_name{
            margin:10px;
        }
        img{
            margin:10px;
        }
    </style>
    <header>
